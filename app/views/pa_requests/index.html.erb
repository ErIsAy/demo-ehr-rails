<h2>Your Prior Auth Dashboard</h2>

<% if @_use_custom_ui %>
<!-- draw our own dashboard -->
<div id="parequests-list">
  <%= link_to "New Request", new_pa_request_path, :class=>'btn btn-small btn-success' %>

  <% if @requests.empty? %>
  <h2>None Yet</h2>
  <% end %>

  <table class="table table-striped table-responsive">
    <tr class="header">
      <th>ID</th>
      <th>Status</th>
      <th>Patient Name</th>
      <th>Prescription</th>
      <th>Payer</th>
      <th>Updated</th>
      <th class='remove'>Remove</th>
    </tr>

    <% @requests.each do |request| %>
    
    <tr class="request">
      <td>
        <%= pa_request_edit_link(request, request.cmm_id) %>
      </td>
      <td>
        <%= cmm_outcome_label(request) %>
      </td>
      <td>
        <%= link_to "#{request.patient.description}", request.patient, :class=>'patient-link' %>
      </td>
      <td>
        <%= link_to "#{request.prescription.drug_name}", edit_patient_prescription_path(request.patient, request.prescription) %>
      </td>
      <td>
        <%= request.form_name %>
      </td>
      <td>
        <%= request.last_updated.strftime("%m/%d/%Y at %I:%M%p") %>
      </td>
      <td class="remove">
        <%= link_to "X", patient_prescription_pa_request_path(request.prescription.patient, request.prescription, request), method: :delete, :class=>'btn btn-xs btn-danger' %>
      </td>
    </tr>
    <% end %>
  </table>
</div>

<% else %>
<div id="dashboard" data-tokens="<%= @tokens.to_s %>"></div>
<% end %>


